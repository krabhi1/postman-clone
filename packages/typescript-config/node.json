{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}